<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"></h3>
                </div>
                <div class="panel-body">
                    <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                    <% } %>
                    <form role="form">
                        <fieldset>
                            <div class="form-group">
                                <label>Выберите район или город</label>
                                <select class="form-control" name="username" id="userlist" autofocus>
                                    <%

                                    users.forEach(function(user){
                                            if(user.username!='Администратор'){
                                    %>
                                    <option><%- user.username%></option>
                                    <%}});%>
                                    <option>Администратор</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Пароль" name="password" type="password" value="">
                            </div>

                            <!-- Change this to a button or input when using this as a form -->
                            <button type="button" id="loginButton" class="btn btn-lg btn-success btn-block">Вход</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('#userlist').select2();
</script>