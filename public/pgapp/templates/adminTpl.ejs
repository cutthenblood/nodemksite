<div id="alert"></div>
<div>
    <div class="row">
        <div class="col-md-7">
            <form id="mainaddform" class="form-horizontal" action="/main" method="get"
                  data-toggle="validator" role="form" data-disable="true">
                <div class="row">
                    <div class="form-group">
                        <label class="col-xs-2 control-label">Мониторинг</label>

                        <div class="col-xs-9 ">
                            <select class="form-control" id="monitoring" autofocus>
                                <%

                        if(typeof model !== "undefined")
                                            model.get('user').monitorings.forEach(function(itm){
                                     %> <option value="<%=itm.name%>"><%=itm.text%></option><%
                                 })
                                  %>


                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label class="col-xs-1 control-label">МО</label>

                        <div class="col-xs-10 ">
                            <select class="form-control" id="mo"  multiple="multiple" style="width: 100%" autofocus>

                                <%
                                if(typeof usermodel !== "undefined")
                                        _.each(usermodel.attributes,function(itm){
                                    if(itm.id && itm.username!='Администратор'){

                                %><option value="<%=itm.id%>"><%=itm.username%></option>
                                <%}}) %>
                            </select>
                        </div>
                        <div class="col-xs-1 ">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="all"> Все
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label class="col-xs-2 control-label">C</label>

                        <div class='input-group date col-xs-4' id="dateStart" data-date-format="DD.MM.YYYY">
                            <input type='text' class="form-control" name="inputdate"/>
                                        <span class="input-group-addon"><span
                                                    class="glyphicon glyphicon-calendar"></span>
                                        </span>
                        </div>
                    </div>
                </div>
                <div class="row ">
                    <div class="form-group">
                        <label class="col-xs-2 control-label">ПО</label>

                        <div class='input-group date col-xs-4' id="dateEnd" data-date-format="DD.MM.YYYY">
                            <input type='text' class="form-control dmdis" name="inputdate"/>
                                        <span class="input-group-addon"><span
                                                    class="glyphicon glyphicon-calendar"></span>
                                        </span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-9 col-xs-offset-3">
                        <button type="submit" class="btn btn-primary report" name="submitexit">Загрузить отчет
                        </button>
                        <button type="submit" class="btn btn-primary whoinput" name="submitexit">Кто не вел?
                        </button>

                    </div>
                </div>
            </form>
        </div>

    </div>
    <br/>


    <div id="whoinput" class="container-fluid"></div>

</div>
<script src="/jquery-file-download/src/Scripts/jquery.fileDownload.js" type="text/javascript"></script>