<form class="form-horizontal" action='' method="POST" data-toggle="validator" id="regform">
    <fieldset>
        <div id="legend">
            <legend class="">Регистрация</legend>
        </div>
        <div class="row">
            <h3>Пользователь - </h3>
            <div class="col-md-10 col-md-offset-2">
                <div class="control-group">
            <!-- Username -->

           <h4> Раздел</h4>
            <li>
            <label><%

                switch(otdel){
                    case 'kadry':{%> Отдел кадров<%break;}
                    case 'orgm':{%>Организационно методический отдел<%break;}
                }%></label></li>
            <h4> Учреждение</h4>
            <li><label><%= username%></label></li>

        </div>
            </div>
        </div>
<br/>
        <br/><br/>

        <div class="row">
            <div class="col-md-10 ">
                <div class="form-group">
                    <div class="form-group col-md-3">
                    <label for="inputPassword" class="control-label">Пароль</label>
                        </div>
                    <div class="form-group col-md-3">
                        <input type="password" data-minlength="4" class="form-control" id="inputPassword" placeholder="" required>
                        <span class="help-block">Минимальная длинна 4 символа</span>

                        <input type="password" class="form-control" id="inputPasswordConfirm" data-match="#inputPassword" data-match-error="Не совпадает" placeholder="" required>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
            </div>
         </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" id="regsave">Сохранить</button>
        </div>

    </fieldset>
</form>