<div id="alert"></div>
<div>
    <div class="row">
        <div class="col-md-10">
            <form id="mainaddform" class="form-horizontal" action="/main" method="get"
                  data-toggle="validator" role="form" data-disable="true">
                <div class="row">
                    <div class="form-group">
                        <label class="col-xs-2 control-label">Мониторинг</label>

                        <div class="col-xs-9 ">
                            <select class="form-control" id="monitoring" autofocus>

                                <option value="kadry">Мониторинг по "Эффективным контрактам"</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label class="col-xs-1 control-label">МО</label>

                        <div class="col-xs-10 ">
                            <select class="form-control" id="mo"  multiple="multiple" style="width: 100%" autofocus>
                                <% if(mos)
                                    mos.forEach(function(itm){
                                         var mo = itm.toJSON();
                                         %><option><%=mo.username%></option>
                                <%}) %>

                            </select>
                        </div>
                        <div class="col-xs-1 ">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="all"> Все
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label class="col-xs-2 control-label">C</label>

                        <div class="col-md-5">
                            <div class="row">
                                <div class="col-md-2  columns">Квартал</div>
                                <div class="col-md-2  columns">
                                    <div class="form-group">
                                        <select class="form-control" id="kstart" autofocus>
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2  columns">Год</div>
                                <div class="col-md-2  columns">
                                    <div class="form-group">
                                        <select class="form-control" id="ystart" autofocus>
                                            <option>2015</option>
                                            <option>2016</option>
                                            <option>2017</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label class="col-xs-2 control-label">ПО</label>

                        <div class="col-md-5">
                            <div class="row">
                                <div class="col-md-2  columns">Квартал</div>
                                <div class="col-md-2  columns">
                                    <div class="form-group">
                                        <select class="form-control" id="kend" autofocus>
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2  columns">Год</div>
                                <div class="col-md-2  columns">
                                    <div class="form-group">
                                        <select class="form-control" id="yend" autofocus>
                                            <option>2015</option>
                                            <option>2016</option>
                                            <option>2017</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-9 col-xs-offset-3">
                        <button type="submit" class="btn btn-primary report" name="submitexit">Загрузить отчет
                        </button>
                        <button type="submit" class="btn btn-primary whoinput" name="submitexit">Кто не вел?
                        </button>

                    </div>
                </div>
            </form>
        </div>

    </div>
    <br/>


    <div id="whoinput" class="container-fluid"></div>

</div>
